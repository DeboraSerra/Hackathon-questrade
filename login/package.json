    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "zod": "^3.21.4"
  }
}
